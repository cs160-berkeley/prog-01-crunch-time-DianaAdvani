<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:showIn="@layout/activity_my">

    <LinearLayout
        android:id="@+id/activities"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/situps"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=""
            android:gravity="bottom|center"
            android:textColor="#ff0000"
            android:background="@drawable/situp_icon"/>

        <Button
            android:id="@+id/jogging"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=""
            android:gravity="bottom|center"
            android:textColor="#ff0000"
            android:background="@drawable/jogging_icon" />

        <Button
            android:id="@+id/pushups"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=""
            android:gravity="bottom|center"
            android:textColor="#ff0000"
            android:background="@drawable/pushup_icon" />

        <Button
            android:id="@+id/jumpingjacks"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=""
            android:gravity="bottom|center"
            android:textColor="#ff0000"
            android:background="@drawable/jumpingjack_icon" />

    </LinearLayout>




    <EditText android:id="@+id/reps"
        android:inputType="number"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/reps_hint"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="means you have burned" />



    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0 calories" />

</LinearLayout>

